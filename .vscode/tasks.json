{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "label": "npm: start",
      "script": "start",
      "options": {
        "cwd": "${workspaceFolder}/web"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Compiling...",
          "endsPattern": "Compiled .*"
        }
      }
    }
  ]
}
